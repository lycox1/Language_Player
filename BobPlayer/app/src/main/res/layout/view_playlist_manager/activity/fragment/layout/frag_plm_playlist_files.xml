<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="1">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_plm_playlist_files_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Playlist files"/>

        <ListView
            android:id="@+id/lv_plm_playlist_files"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>

    <View
        android:layout_height="1dip"
        android:layout_width="match_parent"
        android:background="#969BA2"
        />

    <LinearLayout
        android:id="@+id/layout_plm_playlist_files_bottom"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp">

        <ImageButton
            android:id="@+id/btn_plm_playlist_files_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/btn_plm_add"/>

        <ImageButton
            android:id="@+id/btn_plm_playlist_files_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/btn_plm_back"/>

        <ImageButton
            android:id="@+id/btn_plm_playlist_files_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:background="#ffffff"
            app:srcCompat="@drawable/btn_plm_done"/>

    </LinearLayout>

</LinearLayout>