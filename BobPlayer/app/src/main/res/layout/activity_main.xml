<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    android:paddingBottom="0dp"
    tools:context="com.e4deen.bobplayer.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_weight="0.427"
            android:layout_height="0dp">

            <ListView
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:id="@+id/playList"
                android:background="@drawable/border"
                />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="0.573"
            android:layout_height="0dp"
            android:weightSum="1">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.2"
                android:background="@android:color/background_light"
                >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rl_seekbar">

                    <TextView
                        android:text="01:15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_elapsed_time"
                        android:layout_alignBaseline="@+id/tv_total_duration"
                        android:layout_toLeftOf="@+id/textView6"/>

                    <TextView
                        android:text=" / "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView6"
                        android:layout_toLeftOf="@+id/tv_total_duration"
                        android:layout_alignBaseline="@+id/tv_total_duration"/>

                    <TextView
                        android:text="03:25"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_total_duration"
                        android:layout_below="@+id/seekbar"
                        android:layout_alignRight="@+id/seekbar"
                        android:layout_marginRight="15dp"
                        />

                    <SeekBar
                        android:progress="5"
                        android:max="10"
                        android:thumb="@drawable/seekbar_style_thumb"
                        android:progressDrawable="@drawable/seekbar_style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/background_light"
                        android:id="@+id/seekbar"
                        android:layout_centerVertical="true"/>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.8"
                android:weightSum="1"
                android:background="@drawable/image_line_full"
                android:layout_marginBottom="10dp">

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.277"
                        android:gravity="center_vertical"
                        android:weightSum="1"
                        android:scrollbarSize="0dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5">

                        <TextView
                            android:text="FF/REW "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2"
                            android:layout_toLeftOf="@+id/et_rew_ff_time"
                            android:layout_alignBaseline="@+id/et_rew_ff_time"
                            android:textSize="12sp"/>

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"

                            android:id="@+id/et_rew_ff_time"
                            android:layout_alignParentRight="false"
                            android:layout_toLeftOf="@+id/textView"
                            android:layout_alignBaseline="@+id/textView"
                            android:textSize="12sp"
                            android:inputType="numberSigned|numberDecimal"/>

                        <TextView
                            android:text="Sec"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView"
                            android:layout_alignParentRight="true"
                            android:layout_above="@+id/btn_rew"
                            android:textSize="12sp"
                            android:layout_marginBottom="10dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            ads:srcCompat="@drawable/ic_ff_release"
                            android:id="@+id/btn_ff"
                            android:layout_alignParentBottom="true"
                            android:background="@android:color/background_light"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="0dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            ads:srcCompat="@drawable/ic_rew_release"
                            android:id="@+id/btn_rew"
                            android:background="@android:color/background_light"
                            android:layout_alignTop="@+id/btn_ff"
                            android:layout_toStartOf="@+id/btn_ff"
                            android:layout_marginBottom="10dp"
                            android:layout_marginRight="5dp"/>
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="0.5">

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            ads:srcCompat="@drawable/ic_speed_down_release"
                            android:id="@+id/btn_speed_dn"
                            android:background="@android:color/background_light"
                            android:layout_marginTop="10dp"
                            android:layout_alignParentTop="true"
                            android:layout_toLeftOf="@+id/btn_speed_up"
                            android:layout_marginRight="5dp"/>

                        <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            ads:srcCompat="@drawable/ic_speed_up_release"
                            android:id="@+id/btn_speed_up"
                            android:layout_alignParentTop="true"
                            android:background="@android:color/background_light"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="0dp"/>

                        <TextView
                            android:text="Speed : "
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView4"
                            android:layout_toLeftOf="@+id/tv_play_speed"
                            android:layout_alignBaseline="@+id/tv_play_speed"/>

                        <TextView
                            android:text="1.0"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="false"
                            android:id="@+id/tv_play_speed"
                            android:layout_below="@+id/btn_speed_up"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="10dp"
                            />
                    </RelativeLayout>
                </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_height="match_parent"
                        android:layout_weight="0.446"
                        android:layout_width="0dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:id="@+id/RL_Circle">

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.277"
                        android:gravity="center_vertical"
                        android:weightSum="1">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                ads:srcCompat="@drawable/ic_bookmark_rew_release"
                                android:id="@+id/btn_bookmark_rew"
                                android:layout_alignParentLeft="?attr/isLightTheme"
                                android:layout_alignParentBottom="?attr/isLightTheme"
                                android:background="@android:color/background_light"
                                android:layout_marginLeft="0dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginRight="0dp"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                ads:srcCompat="@drawable/ic_bookmark_ff_release"
                                android:id="@+id/btn_bookmark_ff"
                                android:background="@android:color/background_light"
                                android:layout_marginBottom="10dp"
                                android:layout_alignParentBottom="?attr/isLightTheme"
                                android:layout_marginLeft="5dp"
                                android:layout_toRightOf="@+id/btn_bookmark_rew"/>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            android:elevation="1dp">

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                ads:srcCompat="@drawable/ic_set_bookmark_release"
                                android:id="@+id/btn_set_bookmark"
                                android:background="@android:color/background_light"
                                android:layout_alignParentLeft="false"
                                android:layout_alignParentTop="true"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentRight="false"
                                android:layout_toRightOf="@+id/btn_set_repeat_period"
                                android:layout_marginLeft="5dp"
                                android:elevation="1dp"/>

                            <ImageButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                ads:srcCompat="@drawable/ic_set_repeat_period_release"
                                android:id="@+id/btn_set_repeat_period"
                                android:background="@android:color/background_light"
                                android:layout_alignParentStart="false"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="10dp"
                                android:layout_alignParentTop="true"
                                />
                        </RelativeLayout>
                    </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">

        <com.google.android.gms.ads.AdView
            android:id="@+id/ad_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_unit_id" />
    </LinearLayout>

</LinearLayout>
