<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
              android:weightSum="1"
              android:background="@drawable/border">


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.6"
        android:orientation="vertical"
        android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/iv_shadowing_my_voice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                app:srcCompat="@drawable/iv_my_voice_off"/>

            <ImageButton
                android:id="@+id/btn_shadowing_my_voice_onoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_shadowing_my_voice"
                android:layout_toRightOf="@+id/iv_shadowing_my_voice"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/btn_circle_onoff_off"/>

            <SeekBar
                android:id="@+id/seekbar_shadowing_my_voice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignStart="@+id/iv_shadowing_my_voice"
                android:layout_below="@+id/iv_shadowing_my_voice"
                android:layout_centerHorizontal="false"
                android:max="20"
                android:maxHeight="5dip"
                android:minHeight="5dip"
                android:progress="10"
                android:progressDrawable="@drawable/shadowing_seekbar_style"
                android:thumb="@drawable/iv_seekbar_thumb_img"/>

            <TextView
                android:id="@+id/tv_shadowing_my_voice_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignParentLeft="false"
                android:layout_alignStart="@+id/seekbar_shadowing_playing_file"
                android:layout_below="@+id/seekbar_shadowing_my_voice"
                android:layout_marginLeft="20dp"
                android:text="L"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_shadowing_my_voice_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignRight="@+id/seekbar_shadowing_my_voice"
                android:layout_below="@+id/seekbar_shadowing_my_voice"
                android:layout_marginRight="20dp"
                android:text="R"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5">

            <ImageView
                android:id="@+id/iv_shadowing_playing_file"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="5dp"
                app:srcCompat="@drawable/iv_playing_file_on"/>

            <ImageButton
                android:id="@+id/btn_shadowing_playing_file_onoff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_shadowing_playing_file"
                android:layout_toRightOf="@+id/iv_shadowing_playing_file"
                android:background="@android:color/background_light"
                app:srcCompat="@drawable/btn_circle_onoff_on"/>

            <SeekBar
                android:id="@+id/seekbar_shadowing_playing_file"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="false"
                android:layout_alignStart="@+id/iv_shadowing_playing_file"
                android:layout_below="@+id/iv_shadowing_playing_file"
                android:layout_centerHorizontal="false"
                android:max="20"
                android:maxHeight="5dip"
                android:minHeight="5dip"
                android:progress="10"
                android:progressDrawable="@drawable/shadowing_seekbar_style"
                android:thumb="@drawable/iv_seekbar_thumb_img"/>

            <TextView
                android:id="@+id/tv_shadowing_playing_l"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/seekbar_shadowing_playing_file"
                android:layout_below="@+id/seekbar_shadowing_playing_file"
                android:text="L"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:id="@+id/tv_shadowing_playing_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/seekbar_shadowing_playing_file"
                android:layout_below="@+id/seekbar_shadowing_playing_file"
                android:layout_marginRight="20dp"
                android:text="R"
                android:textColor="@color/colorPrimary"/>

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.2"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imageView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_alignParentStart="true"
                    android:layout_centerHorizontal="false"
                    android:layout_centerVertical="true"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/iv_my_voice_volume"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/iv_playing_file_volume"/>
            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:orientation="horizontal"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <com.e4deen.bean_player.util.VerticalSeekBar
                    android:id="@+id/seekbarMyVoiceMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_weight="1"
                    android:max="10"
                    android:maxHeight="5dip"
                    android:minHeight="5dip"
                    android:progress="10"
                    android:progressDrawable="@drawable/shadowing_seekbar_style"
                    android:thumb="@drawable/iv_seekbar_thumb_img"/>

                <TextView
                    android:id="@+id/tv_shadowing_max_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="false"
                    android:layout_alignTop="@+id/seekbarMyVoiceMaster"
                    android:layout_toRightOf="@+id/seekbarMyVoiceMaster"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:text="MAX"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"/>

                <TextView
                    android:id="@+id/tv_shadowing_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/seekbarMyVoiceMaster"
                    android:layout_alignParentBottom="false"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/seekbarMyVoiceMaster"
                    android:layout_weight="1"
                    android:text="MIN"
                    android:textColor="@color/colorPrimary"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5">

                <com.e4deen.bean_player.util.VerticalSeekBar
                    android:id="@+id/seekbarPlayingFileMaster"
                    android:layout_width="wrap_content"
                    android:layout_height="fill_parent"
                    android:layout_gravity="bottom"
                    android:layout_toRightOf="@+id/seekbarMyVoiceMaster"
                    android:layout_weight="1"
                    android:max="10"
                    android:maxHeight="5dip"
                    android:minHeight="5dip"
                    android:progress="10"
                    android:progressDrawable="@drawable/shadowing_seekbar_style"
                    android:thumb="@drawable/iv_seekbar_thumb_img"/>

                <TextView
                    android:id="@+id/tv_shadowing_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/seekbarPlayingFileMaster"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="16dp"
                    android:layout_toRightOf="@+id/seekbarPlayingFileMaster"
                    android:layout_weight="1"
                    android:text="MIN"
                    android:textColor="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/tv_shadowing_max_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_alignTop="@+id/seekbarPlayingFileMaster"
                    android:layout_toRightOf="@+id/seekbarPlayingFileMaster"
                    android:layout_weight="1"
                    android:paddingTop="16dp"
                    android:text="MAX"
                    android:textColor="@color/colorPrimary"
                    android:textSize="12sp"/>
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
