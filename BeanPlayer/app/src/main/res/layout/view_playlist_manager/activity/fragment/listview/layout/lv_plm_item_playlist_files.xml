<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal" android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/lv_item_plm_playlist_files"
              android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.15"
        android:gravity="center_vertical|center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/iv_item_plm_playlist_files"
            android:src="@drawable/ic_file"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.85">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Name"
            android:id="@+id/tv_item_plm_playlist_files_file_name"
            android:textColor="@color/colorPrimary"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:textSize="16sp"
            android:layout_marginBottom="0dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="File Date"
            android:id="@+id/tv_item_plm_playlist_files_file_date"
            android:textSize="12sp"
            android:textColor="#A9A9A9"
            android:layout_marginStart="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="3dp"/>
    </LinearLayout>

</LinearLayout>