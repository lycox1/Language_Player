<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape>
            <gradient
                android:angle="90"
                android:centerColor="#D5D5D5"
                android:endColor="#D5D5D5"
                android:startColor="#D5D5D5" />

            <corners android:radius="1dp" />

            <stroke
                android:width="1dp"
                android:color="#D5D5D5" />
            <stroke
                android:width="1dp"
                android:color="#D5D5D5" />
        </shape>
    </item>

    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <gradient
                    android:angle="90"
                    android:centerColor="#F26B70"
                    android:endColor="#F26B70"
                    android:startColor="#F26B70" />

                <corners android:radius="1dp" />

                <stroke
                    android:width="1dp"
                    android:color="#F26B70" />
                <stroke
                    android:width="1dp"
                    android:color="#F26B70" />
            </shape>
        </clip>
    </item>

</layer-list>